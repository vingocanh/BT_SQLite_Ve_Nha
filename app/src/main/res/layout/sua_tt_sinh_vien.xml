<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DAEACB"
    android:minHeight="300dp"
    android:minWidth="400dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin sinh viên"
        android:gravity="center"
        android:textSize="25sp"
        android:background="#D8731B"
        android:layout_margin="15dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etNgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày tháng năm sinh"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etTruongHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên trường"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etQue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập quê quán"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập email"
        android:paddingLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="15dp"
        >
        <RadioButton
            android:id="@+id/rbNamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:checked="true"
            android:paddingLeft="5dp"
            android:textColor="#050505"
            android:paddingRight="5dp"/>

        <RadioButton
            android:id="@+id/rbNuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textColor="#050505"
            android:paddingRight="5dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btHuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#D58585"
            android:text="Hủy"
            android:textColor="#080908" />

        <Button
            android:id="@+id/btXacNhan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác Nhận"
            android:textColor="#FFF"
            android:layout_margin="15dp"
            android:background="#0097A7"/>


    </LinearLayout>

</LinearLayout>